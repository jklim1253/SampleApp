<Page x:Class="SampleApp.Views.SettingView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SampleApp.Views"
      xmlns:testdata="clr-namespace:SampleApp.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingView">
  <Grid Style="{StaticResource MainView}">
    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
      <TextBlock Text="SettingView"/>
      <TextBlock Text="{Binding Title}"/>
      <ComboBox ItemsSource="{Binding Depot}"
                SelectedItem="{Binding Selected}">
        <ComboBox.ItemTemplate>
          <DataTemplate DataType="{x:Type testdata:TestData}">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="{Binding Id}"/>
              <TextBlock Text=" - "/>
              <TextBlock Text="{Binding Name}"/>
            </StackPanel> 
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>
      <Button Content="Click"
              Command="{Binding ClickCommand}"/>
      <Button Content="Click2"
              Command="{Binding Click2Command}"/>
    </StackPanel>
  </Grid>
</Page>
