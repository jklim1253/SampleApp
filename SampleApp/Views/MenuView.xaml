<Page x:Class="SampleApp.Views.MenuView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SampleApp.Views"
      xmlns:viewmodels="clr-namespace:SampleApp.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuView">
  <Page.DataContext>
    <viewmodels:MenuViewModel/>
  </Page.DataContext>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0"
                Orientation="Vertical">
      <Button Content="&#xE700;"
              Style="{StaticResource Menu}"/>
      <Button Content="Account"/>
      <Button Content="Group"/>
    </StackPanel>
    <StackPanel Grid.Row="2"
                Orientation="Vertical">
      <Button Content="&#xE713;"
              Style="{StaticResource Menu}"/>
    </StackPanel>
  </Grid>
</Page>
